#!/bin/bash

BASEPATH=`dirname "$0"`

if [ ! -e .init-done ]
then
	echo -en "Initializing IPFS daemon..."
	src/init/init.sh 2>&1 >> /dev/null
	echo "Done"
else
	echo "Cleaning up IPFS..."
	src/init/clean.sh 2>&1 >> /dev/null
fi

source $BASEPATH/config

python3 src/do.py -p $PUBLIC_KEY -k $PRIVATE_KEY $@
